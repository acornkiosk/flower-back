<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="users">
	<sql id="query">
			ID
	        ,PASSWORD
	        ,USERNAME
	        ,RANK
	        ,ROLE
	        ,TO_CHAR(REGDATE, 'YYYY/MM/DD') AS REGDATE
	</sql>
	<sql id="query_insert">
			ID
	        ,PASSWORD
	        ,USERNAME
	        ,RANK
	        ,ROLE
	        ,REGDATE
	</sql>
    <select id="getUserList" resultType="userDto" parameterType="userDto">
        SELECT
            <include refid="query"/>
        FROM
        (
            SELECT
                result1.*
                ,ROWNUM AS rnum
            FROM
            (
                SELECT
                    <include refid="query_insert"/>
                FROM
                    USER_MANAGE
                <if test="rank == 0">
                WHERE
                	RANK NOT IN(3001,3002)
                </if>
                <if test="rank != 0">
                WHERE
                        RANK=#{rank}
                </if>
                <if test="sort == null">
                    ORDER BY id desc
                </if>
                <if test ="sort=='asc'">
                    ORDER BY regdate asc
                </if>
                <if test ="sort=='desc'">
                    ORDER BY regdate desc
                </if>
            ) result1
        )
        <if test="startRowNum != 0">
        WHERE
            rnum BETWEEN #{startRowNum} AND #{endRowNum}
        </if>
    </select>

    <select id="getUser" parameterType="String" resultType="userDto">
        SELECT
            <include refid="query"/>
        FROM
            USER_MANAGE
        WHERE
            ID = #{id}
    </select>

    <insert id="insert" parameterType="userDto">
        INSERT INTO USER_MANAGE
            (
               <include refid="query_insert"/>
            )
        VALUES
            (
                #{id}
                ,#{password}
                ,#{userName}
                ,#{rank}
                <if test="rank == 3002 || rank == 3001">
                ,'4001,4002,4003,4004'
                </if>
                <if test="rank == 3003 || rank == 3004">
                ,'4004'
                </if>
                <if test="regdate == null">
                ,TO_CHAR(SYSDATE, 'YYYY-MM-DD')
                </if>
                <if test="regdate != null">
                ,TO_DATE(#{regdate}, 'YYYY-MM-DD')
                </if>
                
            )
    </insert>

    <delete id="delete" parameterType="userDto">
        DELETE
        FROM
            USER_MANAGE
        WHERE
            id = #{id}
    </delete>

    <update id="update" parameterType="userDto">
        UPDATE 
        	USER_MANAGE
        SET
        	USERNAME = #{userName}
            ,RANK = #{rank}
            ,ROLE = #{role}
            <if test="newId != null ">
             ,id=#{newId}
            </if>
            <if test="newPassword != null ">
             ,password=#{newPassword}
            </if>
        WHERE
            id = #{id}
    </update>

    <select id="getCount" resultType="Integer">
        SELECT
            NVL(MAX(ROWNUM),0)
        FROM
            USER_MANAGE
        WHERE
          	RANK NOT IN(3001,3002)
    </select>
    
        <select id="checkId" parameterType="userDto" resultType="String">
    	SELECT
    		ID
    	FROM
    		USER_MANAGE
    	WHERE
    		id=#{id}
    </select>
</mapper>