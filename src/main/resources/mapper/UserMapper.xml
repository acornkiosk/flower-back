<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="users">
	<sql id="query">
			ID
	        ,PASSWORD
	        ,USERNAME
	        ,RANK
	        ,ROLE
	        ,TO_CHAR(REGDATE, 'YYYY/MM/DD') AS REGDATE
	</sql>
	<sql id="query_insert">
			ID
	        ,PASSWORD
	        ,USERNAME
	        ,RANK
	        ,ROLE
	        ,REGDATE
	</sql>
    <select id="getUserList" resultType="userDto" parameterType="userDto">
        SELECT
        	<include refid="query"/> 
        FROM 
        	USER_MANAGE
    	<if test="rank != 0">
    		where rank=#{rank}
    	</if>        
    </select>

    <select id="getUser" parameterType="String" resultType="userDto">
        SELECT
            <include refid="query"/>
        FROM
            USER_MANAGE
        WHERE
            ID = #{id}
    </select>

    <insert id="insert" parameterType="userDto">
        INSERT INTO USER_MANAGE
            (
               <include refid="query_insert"/>
            )
        VALUES
            (
                #{id}
                ,#{password}
                ,#{userName}
                ,#{rank}
                <if test="rank == 3002 || rank == 3001">
                ,'4001,4002,4003,4004'
                </if>
                <if test="rank == 3003 || rank == 3004">
                ,'4004'
                </if>
                ,TO_DATE(SYSDATE, 'YYYY-MM-DD')
            )
    </insert>

    <delete id="delete" parameterType="userDto">
        DELETE
        FROM
            USER_MANAGE
        WHERE
            id = #{id}
    </delete>

    <update id="update" parameterType="userDto">
        UPDATE 
        	USER_MANAGE
        SET
        	USERNAME = #{userName}
            ,RANK = #{rank}
            ,ROLE = #{role}
        WHERE
            id = #{id}
    </update>
</mapper>